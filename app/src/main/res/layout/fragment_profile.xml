<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminate="true"
        android:visibility="visible"
        style="?android:attr/progressBarStyleLarge"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView para permitir desplazamiento -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Avatar del usuario"
                android:scaleType="centerCrop"
                android:src="@drawable/alerter_ic_face"
                app:shapeAppearance="@style/CircularImageView" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/userDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="john.doe@email.com"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Botón Cerrar Sesión (movido debajo del email) -->
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Cerrar sesión" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#DDDDDD" />

            <!-- SECCIÓN NOTIFICACIONES -->
            <TextView
                android:id="@+id/tvNotificationsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchInvitaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invitaciones a listas" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchItemAgregado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuando se agrega un ítem a una lista" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchItemActualizado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuando se actualiza el estado de un ítem" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchItemEliminado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuando se elimina un ítem de una lista" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#DDDDDD" />

            <!-- Texto informativo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan actual"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlanDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="italic" />

            <!-- BOTÓN COMPRAR PREMIUM -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBuyPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Comprar Premium"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#FFC107"
                app:icon="@drawable/ic_crown"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:cornerRadius="50dp"
                app:rippleColor="#FFE082"
                android:visibility="gone" />

            <!-- Separador final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="64dp"
                android:background="#DDDDDD" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
