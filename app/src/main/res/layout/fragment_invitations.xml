<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.invitations.InvitationsFragment">

    <!-- RecyclerView principal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInvitations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_invitation"
        android:padding="8dp" />

    <!-- Texto "sin invitaciones" (centrado en ambos ejes) -->
    <TextView
        android:id="@+id/textNoInvitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aún no tenés invitaciones pendientes.\nCuando alguien te invite, aparecerá acá."
        android:textSize="16sp"
        android:textColor="#808080"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
